<%- include ('../partials/header') %> 

<div class="container w-50 my-5 p-5">
    <h1 class = "my-5 border-bottom border-dark-sm pb-4 w-75">Edit</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST" >
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" value="<%=campground.name %>" name="campground[name]">
        </div>
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" step="10" min="100" value="<%=campground.price%>" name="campground[price]">
        </div>
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" value="<%=campground.image%> " name="campground[image]">
        </div>
        <!-- <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
        </div> -->
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" value="<%= campground.description %> " name="campground[description]">
        </div>
        <div class = "my-2 w-75">
            <input class = "form-control btn btn-warning" type="submit"> 
        </div>
    </form>

</div>

<%- include ('../partials/footer') %> 