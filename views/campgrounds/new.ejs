<%- include ('../partials/header') %> 

<div class="container w-50 my-5 p-5">
    <h1 class = "my-3 border-bottom border-dark-sm pb-4 w-75">ADD YOUR PLACE</h1>

    <form action="/campgrounds" method="POST" >
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" placeholder="Name" name="newcampgrounds[name]">
        </div>
        <div class = "my-2 w-75">
            <input class = "form-control" type="number" min="0" max="5" placeholder="Rating" name="newcampgrounds[price]">
        </div>
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" placeholder="URL" name="newcampgrounds[image]">
        </div>
        <!-- <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
        </div> -->
        <div class = "my-2 w-75">
            <input class = "form-control" type="text" placeholder="Description" name="newcampgrounds[description]">
        </div>
        <div class = "my-2 w-75">
            <input class = "form-control btn btn-warning" type="Submit"> 
        </div>
    </form>

    <a href="/campgrounds" class="btn btn-danger">HOME</a>

</div>

<%- include ('../partials/footer') %> 